/ frozen_string_literal: true

doctype html
html lang="en"
  head
    title Blogger

    meta charset="utf-8"
    meta [
      name="viewport"
      content="width=device-width, initial-scale=1"
    ]
    
    = csrf_meta_tags
    = csp_meta_tag
    
    = stylesheet_link_tag 'application', 'data-turbo-track': 'reload'
    = javascript_include_tag 'application', 'data-turbo-track': 'reload', defer: true
  
  body data-controller="bs"
    = render Elements::Navbar::Component.new left_nav: [homepage_button, users_button, articles_button],
      right_nav: create_nav_items

    div class="container"
      = flash_messages
      = yield
